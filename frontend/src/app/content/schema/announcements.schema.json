{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "text",
            "position",
            "visible"
        ],
        "additionalProperties": false,
        "properties": {
            "text": {
                "type": "string",
                "minLength": 5
            },
            "link": {
                "type": "string"
            },
            "position": {
                "type": "integer",
                "minimum": 0
            },
            "visible": {
                "type": "boolean"
            }
        }
    }
}
