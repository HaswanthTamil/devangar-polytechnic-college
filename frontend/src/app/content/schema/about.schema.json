{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "aboutText",
        "address",
        "contacts"
    ],
    "additionalProperties": false,
    "properties": {
        "aboutText": {
            "type": "string",
            "minLength": 50,
            "description": "Main about section text"
        },
        "address": {
            "type": "string",
            "minLength": 10,
            "description": "Physical or postal address"
        },
        "contacts": {
            "type": "object",
            "required": [
                "emails",
                "mobiles"
            ],
            "additionalProperties": false,
            "properties": {
                "emails": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "format": "email"
                    },
                    "description": "Contact email addresses"
                },
                "mobiles": {
                    "type": "array",
                    "minItems": 1,
                    "items": {
                        "type": "string",
                        "pattern": "^[0-9+\\s-]{5,20}$"
                    }
                }
            }
        }
    }
}
