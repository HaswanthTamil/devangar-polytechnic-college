{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "slug",
            "name",
            "visible",
            "position"
        ],
        "additionalProperties": false,
        "properties": {
            "slug": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$"
            },
            "name": {
                "type": "string"
            },
            "visible": {
                "type": "boolean"
            },
            "position": {
                "type": "integer",
                "minimum": 0
            }
        }
    }
}
