{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "department",
            "sections"
        ],
        "additionalProperties": false,
        "properties": {
            "department": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$"
            },
            "sections": {
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "courses": {
                        "type": "string"
                    },
                    "facilities": {
                        "type": "string"
                    },
                    "placements": {
                        "type": "string"
                    },
                    "activities": {
                        "type": "string"
                    }
                }
            }
        }
    }
}
