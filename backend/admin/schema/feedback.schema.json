{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "required": [
        "type",
        "message",
        "createdAt"
    ],
    "additionalProperties": false,
    "properties": {
        "type": {
            "type": "string",
            "enum": [
                "faculty",
                "student"
            ]
        },
        "message": {
            "type": "string",
            "minLength": 5
        },
        "createdAt": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp"
        }
    }
}
