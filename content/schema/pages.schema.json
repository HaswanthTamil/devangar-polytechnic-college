{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "array",
    "items": {
        "type": "object",
        "required": [
            "slug",
            "title",
            "sections",
            "published"
        ],
        "additionalProperties": false,
        "properties": {
            "slug": {
                "type": "string",
                "pattern": "^[a-z0-9-]+$",
                "description": "URL-safe, lowercase, hyphens only"
            },
            "title": {
                "type": "string"
            },
            "sections": {
                "type": "array",
                "items": {
                    "type": "object",
                    "required": [
                        "type",
                        "content"
                    ],
                    "additionalProperties": false,
                    "properties": {
                        "type": {
                            "const": "text"
                        },
                        "content": {
                            "type": "string"
                        }
                    }
                }
            },
            "published": {
                "type": "boolean"
            }
        }
    }
}
